exports.getLoadingView=function(e,t){var i;i=Ti.UI.iPhone.ActivityIndicatorStyle.DARK;var o,r=Ti.UI.createActivityIndicator({color:"black",font:{fontSize:26,fontWeight:"bold"},message:"Loading...",style:i,top:10,left:10,height:Ti.UI.SIZE,width:Ti.UI.SIZE}),l=Ti.UI.createWindow({navBarHidden:!0,fullscreen:!0,orientationModes:[Titanium.UI.LANDSCAPE_LEFT,Titanium.UI.LANDSCAPE_RIGHT],width:Ti.UI.SIZE,height:Ti.UI.SIZE});l.add(r),l.open(),r.show();var o=Alloy.createController(e,t).getView();return r.hide(),l.close(),o},exports.PixelsToDPUnits=function(e){return e},exports.DPUnitsToPixels=function(e){return e},exports.addCommas=function(e){e+="",x=e.split("."),x1=x[0],x2=x.length>1?"."+x[1]:"";for(var t=/(\d+)(\d{3})/;t.test(x1);)x1=x1.replace(t,"$1,$2");return x1+x2},exports.displayValue=function(e,t){switch(e.fieldType){case"boolean":if(0==t||""==t)return"N/A";if(t)return"Y";break;case"number":var i=comjs.addCommas(t*(e.base||1))||"";return i;default:switch(e.returnType){case"boolean":if(0==t||""==t)return"N/A";if(t)return"Y";default:return t||""}}},exports.morAddCommas=function(e){var t="";if(e){e=100*e,e=Math.round(e),e=e.toString(),num=e.substring(0,e.length-2),dec=e.substring(e.length-2,e.length);var i=new String(num);i=i.split("").reverse();for(var t="",o=0;o<=i.length-1;o++)t=i[o]+t,(o+1)%3==0&&i.length-1!==o&&(t=","+t);t=t+"."+dec}return t},exports.changeColor=function(e,t){e.addEventListener("longpress",function(){var i=Ti.UI.createAlertDialog({cancel:0,buttonNames:["取消","backgroudColor","color"],message:"改變顏色",title:e.id});i.addEventListener("click",function(i){if(1==i.index){var o=new baseUi,r=o.getColorPickerView({width:300,height:300,selectedcolor:function(t){e.backgroundColor="#"+t.color},clickCancel:function(e){t.remove(e)}});t.add(r)}if(2==i.index){var o=new baseUi,r=o.getColorPickerView({width:300,height:300,selectedcolor:function(t){e.color="#"+t.color},clickCancel:function(e){t.remove(e)}});t.add(r)}}),i.show()})};